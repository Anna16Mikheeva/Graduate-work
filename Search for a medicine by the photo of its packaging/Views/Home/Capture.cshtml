@model Search_for_a_medicine_by_the_photo_of_its_packaging.Models.ViewModel

<style>
    .div-center {
        text-align: center;
        position: relative;
        left: 50%;
        transform: translate(-50%, 0);
    }

    .form {
        margin-top: 15px;
        margin-bottom: 15px;
    }

    .input {
        height: 35px;
        width: 35px;
        background-color: #1bbc9b;
        border-radius: 20px;
    }

    #buttonhiden {
        background: transparent;
        border: none !important;
        font-size: 0;
    }
</style>

<br />
            <div id="my_camera" class="div-center"></div>
            <form class="div-center form">
                <input type="button" class="btn btn-success input"
                       onclick="take_snapshot()" />
            </form>
<div>
    <div>
        <div>
        </div>
        <div class="div-center">
            <div id="results"></div>
        </div>
        <br />
        <br />
    </div>
</div>
<div></div>
<script src="/webcamjs/webcam.js"></script>
<script language="javascript">
    Webcam.set({
        width: 320,
        height: 240,
        image_format: 'jpeg',
        jpeg_quality: 90
    });
    Webcam.attach('#my_camera');
</script>
<script language="JavaScript">
    function take_snapshot() {
        Webcam.snap(function (data_uri) {
            document.getElementById('results').innerHTML =
                '<img src="' +
                data_uri +
                '"/>';
            Webcam.upload(data_uri,
                'Home/Capture',
                function (code, text) {
                    alert('Photo Captured')
                });
        });
    }
</script>