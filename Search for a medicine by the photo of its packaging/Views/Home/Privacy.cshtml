@model Search_for_a_medicine_by_the_photo_of_its_packaging.Models.ViewModel

<div align="justify">
<font size="4">
@if (Model != null)
{
<font color=#8B0000><h2>@Html.DisplayFor(modelItem => Model.DataNamesView.NameDrugsRus) (@Html.DisplayFor(modelItem => Model.DataNamesView.NameDrugsEng))</h2></font>
<h3>Код АТХ:</h3>@Html.DisplayFor(modelItem => Model.DataNamesView.AtcCode)
<p/><h3>Активные вещества и состав</h3>
    @for (int i = 0; i < Model.DataNamesView.NameOfActiveSubstancesRus.Length;i++)
    {
        @Html.DisplayFor(item => item.DataNamesView.NameOfActiveSubstancesRus[i]) <font size="3" color="gray">@Html.DisplayFor(item => item.DataNamesView.NameOfActiveSubstancesEng[i])</font>
         <font size="4" color=#566aa3>@Html.DisplayFor(item => item.DataNamesView.NameCompanyEng[i]) </font><font size="3" color="gray">@Html.DisplayFor(item => item.DataNamesView.NameCompanyRus[i])</font><br />
     } 
    <p/><h3>Фармакологическое действие</h3>
    @Html.DisplayFor(item => item.DataNamesView.pPharmachologicEffect) 
    <p/><h3>Показания активных веществ препарата @Html.DisplayFor(modelItem => Model.DataNamesView.NameDrugsRus)</h3>
    @Html.DisplayFor(item => item.DataNamesView.IndicationsOfTheActiveSubstancesOfTheDrug) 
    <p/><h3>Режим дозирования</h3>
    @Html.DisplayFor(item => item.DataNamesView.DosingRegimen) 
    <p/><h3>Побочное действие</h3>
    @Html.DisplayFor(item => item.DataNamesView.SideEffect) 
    <p/><h3>Противопоказания к применению</h3>
    @Html.DisplayFor(item => item.DataNamesView.ContraindicationsForUse) 
    <p/><h3>Применение при беременности и кормлении грудью</h3>
    @Html.DisplayFor(item => item.DataNamesView.UseDuringPregnancyAndLactation) 
    <p/><h3>Применение при нарушениях функции печени</h3>
    @Html.DisplayFor(item => item.DataNamesView.ApplicationForViolationsOfLiverFunction) 
    <p/><h3>Применение при нарушениях функции почек</h3>
    @Html.DisplayFor(item => item.DataNamesView.ApplicationForViolationsOfKidneyFunction) 
    <p/><h3>Применение у детей</h3>
    @Html.DisplayFor(item => item.DataNamesView.UseInChildren) 
    <p/><h3>Особые указания</h3>
    @Html.DisplayFor(item => item.DataNamesView.SpecialInstructions) 
    <p/><h3>Лекарственное взаимодействие</h3>
    @Html.DisplayFor(item => item.DataNamesView.DrugInteraction) 
}
</font>
</div>